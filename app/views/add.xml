<Alloy>
	<Window title="Add a song" onAndroidbackbutton="closeMe">
		<RightNavButton platform="ios">
			<Button onClick="closeMe">Close</Button>
		</RightNavButton>
		<Label>Name:</Label>
		<TextField id="name" width="200dp"/>
		<Label>Artist:</Label>		
		<TextField id="artist" width="200dp"/>
		<Label>Album:</Label>		
		<TextField id="album" width="200dp"/>
		<Button onClick="saveSong">Save</Button>
	</Window>
</Alloy>