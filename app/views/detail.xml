<Alloy>
	<Window title="Song Details" onAndroidbackbutton="closeMe">
		<RightNavButton platform="ios">
			<Button onClick="closeMe">Close</Button>
		</RightNavButton>
		<Label>Name:</Label>
		<TextField id="name"/>
		<Label>Artist:</Label>		
		<TextField id="artist"/>
		<Label>Album:</Label>		
		<TextField id="album"/>
		<Button onClick="updateSong">Save Edits</Button>
		<Button onClick="deleteSong">Remove</Button>	
	</Window>
</Alloy>